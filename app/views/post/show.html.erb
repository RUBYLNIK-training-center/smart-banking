<div class="text-center mt-5">
	<h1><%= @post.name %></h1>
</div>

<div class="container">
  <div class="row">    
    <div class="col-lg-5 col-md-6 col-sm-12">
			  <% if @post.avatar.attached? %>
	          <img src="<%= (url_for(@post.avatar)) %>" alt="Admin" class="rounded-circle" width="400" height="400" >
	        <% else %>
	          <img src="https://smart-banking.s3.us-east-2.amazonaws.com/post1.png" alt="Admin" class="rounded-circle" width="400">
	      <% end %>
		</div>
	  <div class="mt-5 col-lg-7 col-md-6 col-sm-12 desc">
  		<%= @post.description %>
    </div>
  </div>
</div>

<div class="container col ml-5">
	<div class="row top-buffer"> 
		<div class="mt-4 text-right">	
		  <footer class="blockquote-footer">by <cite title="Created_at"><%= @post.created_at%> </cite></footer>
		</div>
	</div>
</div>
