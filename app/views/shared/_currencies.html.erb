<div class="table-responsive" style="max-height: 31em;">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
            <th scope="col"><%= t('users.currency') %></th>
            <th scope="col">1 USD</th>
            </tr>
        </thead>
        <tbody>
            <% @currencies.each do |currency| %>
            <tr>
                <td><%= currency.name %></td>
                <td><%= currency.rate %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>