<div class="table-responsive " style="max-height: 31em; ">
    <table class="table table-hover table-bordered">  
        <thead>
            <tr>
            <th scope="col" class= "bg-success text-white"><%= t('users.currency') %></th>
                <th scope="col" class= "bg-success text-white">1 USD</th>
            </tr>
        </thead>
        <tbody>
            <% @currencies.each do |currency| %>
                <tr>  
                        <td class='bg-light text-dark'><%= currency.name %></td>
                        <td class='bg-light text-dark'><%= currency.rate %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>